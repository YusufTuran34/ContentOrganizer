# Content Organizer Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI Chat Service (Port 8081)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# Music Creator Service (Port 8082)
# =============================================================================
JAMENDO_CLIENT_ID=your-jamendo-client-id
JAMENDO_CLIENT_SECRET=your-jamendo-client-secret

# =============================================================================
# Video Creator Service (Port 8083)
# =============================================================================
RUNWAY_API_KEY=your-runway-api-key
RUNWAY_BASE_URL=https://api.runwayml.com/v1
RUNWAY_TIMEOUT=300
FILE_UPLOAD_PATH=/tmp/videos
FILE_MAX_SIZE=1073741824
FILE_ALLOWED_EXTENSIONS=mp4,avi,mov,mkv,webm
HIGGSFIELD_API_KEY=your-higgsfield-api-key

# =============================================================================
# YouTube Service (Port 8084)
# =============================================================================
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REFRESH_TOKEN=your-youtube-refresh-token
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_STREAM_KEY=your-youtube-stream-key

# =============================================================================
# Twitter Service (Port 8085)
# =============================================================================
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_AUTH_CODE=your-twitter-auth-code
TWITTER_CODE_VERIFIER=your-twitter-code-verifier
TWITTER_USERNAME=your-twitter-username
TWITTER_REDIRECT_URI=http://localhost:8085/api/v1/twitter/oauth/callback

# =============================================================================
# Flow Runner Service (Port 8086)
# =============================================================================
# No specific environment variables needed for flow runner

# =============================================================================
# MongoDB Configuration
# =============================================================================
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password

